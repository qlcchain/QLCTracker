{
	"name": "smsbilling",
	"version": "0.1.0",
	"main": "main.js",
	"scripts": {
		"postinstall": "node patch.js",
		"ng": "ng",
		"start": "ng serve",
		"build": "ng build",
		"test": "ng test",
		"lint": "ng lint",
		"e2e": "ng e2e",
		"sms:dev": "ng serve",
		"sms:dev-testnet": "ng serve --configuration=testnet",
		"sms:build-testnet": "ng build --configuration=testnet",
		"sms:build": "ng build --configuration=production",
		"sms:build-desktop": "ng build --configuration=desktop --base-href ./",
		"sms:build-desktop-testnet": "ng build --configuration=desktop-testnet --base-href ./",
		"desktop:dev": "electron main.js",
		"desktop:dev-testnet": "electron main_testnet.js",
		"desktop:local": "electron-builder",
		"desktop:devLocal": "electron-builder -c.compression=store",
		"desktop:full": "electron-builder -wml --x64"
	},
	"private": true,
	"dependencies": {
		"@angular/animations": "^7.2.15",
		"@angular/common": "^7.2.15",
		"@angular/compiler": "^7.2.15",
		"@angular/core": "^7.2.15",
		"@angular/forms": "^7.2.15",
		"@angular/platform-browser": "^7.2.15",
		"@angular/platform-browser-dynamic": "^7.2.15",
		"@angular/router": "^7.2.15",
		"@ngx-translate/core": "^11.0.1",
		"@ngx-translate/http-loader": "^4.0.0",
		"@types/jquery": "^3.3.29",
		"bignumber.js": "^8.1.1",
		"bip39": "^3.0.2",
		"blakejs": "^1.1.0",
		"bootstrap": "^4.3.1",
		"core-js": "^2.6.5",
		"cross-spawn-with-kill": "^1.0.0",
		"crypto-js": "^3.1.9-1",
		"electron-log": "^3.0.5",
		"electron-updater": "^4.0.6",
		"electron-util": "^0.11.0",
		"fs-extra": "^8.0.1",
		"fsevents": "^2.0.6",
		"jquery": "^3.4.1",
		"js-base64": "^2.5.1",
		"jsonrpc-lite": "^2.0.7",
		"ngx-bootstrap": "^4.1.1",
		"ngx-clipboard": "^12.0.0",
		"ngx-device-detector": "^1.3.5",
		"ngx-logger": "^3.3.13",
		"particles.js": "^2.0.0",
		"qlc.js": "0.0.6",
		"qrcode": "^1.3.3",
		"rxjs": "~6.5.2",
		"signal-exit": "^3.0.2",
		"to-executable-name": "^2.0.0",
		"tslib": "^1.9.3",
		"xhr2": "^0.1.4",
		"zone.js": "~0.9.1"
	},
	"devDependencies": {
		"@angular-devkit/build-angular": "^0.13.9",
		"@angular/cli": "^7.3.9",
		"@angular/compiler-cli": "^7.2.15",
		"@angular/language-service": "^7.2.15",
		"@types/jasmine": "~3.3.12",
		"@types/jasminewd2": "~2.0.6",
		"@types/node": "^12.0.2",
		"chmod": "^0.2.1",
		"codelyzer": "~5.0.1",
		"download": "^7.1.0",
		"electron": "^5.0.1",
		"electron-builder": "^20.40.2",
		"electron-is-dev": "^1.1.0",
		"jasmine-core": "~3.4.0",
		"jasmine-spec-reporter": "~4.2.1",
		"karma": "^4.1.0",
		"karma-chrome-launcher": "~2.2.0",
		"karma-coverage-istanbul-reporter": "^2.0.5",
		"karma-jasmine": "~2.0.1",
		"karma-jasmine-html-reporter": "^1.4.2",
		"popper.js": "^1.15.0",
		"protractor": "~5.4.2",
		"ts-node": "~8.1.0",
		"tslint": "~5.16.0",
		"typescript": "^3.2.4",
		"tar": ">=4.4.2"
	},
	"build": {
		"appId": "org.qlcchain.smsbilling",
		"buildVersion": "0.1.0",
		"productName": "SMSBilling",
		"asar": true,
		"files": [
			"dist/**/*",
			"node_modules/**/*",
			"package.json",
			"main.js"
		],
		"directories": {
			"output": "dist-desktop",
			"app": "./"
		},
		"dmg": {
			"window": {
				"width": 540,
				"height": 380
			},
			"contents": [
				{
					"x": 410,
					"y": 230,
					"type": "link",
					"path": "/Applications"
				},
				{
					"x": 130,
					"y": 230,
					"type": "file"
				}
			]
		},
		"mac": {
			"target": [
				"dmg"
			],
			"type": "distribution",
			"extraResources": [
				{
					"from": "./extra/darwin/x64/",
					"to": "./",
					"filter": [
						"**/*"
					]
				},
				{
					"from": "./extra/config.json",
					"to": "./"
				}
			],
			"binaries": [
				"./dist-desktop/mac/smsBilling.app/Contents/Resources/gqlc"
			],
			"category": "public.app-category.finance"
		},
		"win": {
			"target": [
				"nsis",
				"portable"
			],
			"extraResources": [
				{
					"from": "./extra/win32/${arch}",
					"to": "./",
					"filter": [
						"**/*"
					]
				},
				{
					"from": "./extra/config.json",
					"to": "./",
					"filter": [
						"**/*"
					]
				}
			]
		},
		"nsis": {
			"oneClick": false,
			"allowToChangeInstallationDirectory": true
		},
		"linux": {
			"target": [
				"deb",
				"AppImage"
			],
			"desktop": {
				"Categories": "P2P;Finance;Security"
			},
			"extraResources": [
				{
					"from": "./extra/linux/x64/",
					"to": "./",
					"filter": [
						"**/*"
					]
				},
				{
					"from": "./extra/config.json",
					"to": "./",
					"filter": [
						"**/*"
					]
				}
			]
		},
		"publish": [
			{
				"provider": "github",
				"owner": "qlcchain",
				"repo": "sms-billing"
			}
		]
	}
}
